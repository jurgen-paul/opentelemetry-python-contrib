[flake8]
ignore =
  E501  # line too long, defer to black
  F401  # unused import, defer to pylint
  W503  # allow line breaks before binary ops
  W504  # allow line breaks after binary ops
  E203  # allow whitespace before ':' (https://github.com/psf/black#slices) 
exclude =
  .bzr
  .git
  .hg
  .svn
  .tox
  CVS
  .venv*/
  venv*/
  target
  __pycache__
  exporter/oxeye_opentelemetry-exporter-jaeger/src/oxeye_opentelemetry/exporter/jaeger/gen/
  exporter/oxeye_opentelemetry-exporter-jaeger/build/*
  docs/examples/oxeye_opentelemetry-example-app/src/oxeye_opentelemetry_example_app/grpc/gen/
  docs/examples/oxeye_opentelemetry-example-app/build/*
  oxeye_opentelemetry-python-core/
  oxeye_opentelemetry-proto/build/*
  oxeye_opentelemetry-proto/src/oxeye_opentelemetry/proto/
